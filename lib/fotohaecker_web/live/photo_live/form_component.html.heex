<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="photo-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  
    <%= label f, :description %>
    <%= text_input f, :description %>
    <%= error_tag f, :description %>
  
    <%= label f, :file_name %>
    <%= text_input f, :file_name %>
    <%= error_tag f, :file_name %>
  
    <%= label f, :tags %>
    <%= multiple_select f, :tags, ["Option 1": "option1", "Option 2": "option2"] %>
    <%= error_tag f, :tags %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
